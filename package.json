{
  "name": "lunch-and-learn",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun run index.ts && bun run build:tw",
    "dev": "bun run dev.ts",
    "dev:tw": "bunx tailwindcss -i ./templates/input.css -o ./public/css/tw.css --watch --poll",
    "build:tw": "bunx tailwindcss -i ./templates/input.css -o ./public/css/tw.css --minify",
    "lint": "eslint . && prettier --check . && markdownlint-cli2 .",
    "lint:fix": "prettier --write . && markdownlint-cli2-fix ."
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/markdown-it": "^13.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "bun-types": "latest",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "front-matter": "^4.0.2",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.9.0",
    "isomorphic-git": "^1.25.1",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdownlint-cli2": "^0.12.0",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ms": "^2.1.3"
  }
}
